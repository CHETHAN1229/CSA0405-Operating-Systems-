#include <stdio.h>

int main() {
    int n;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int pid[n], bt[n], wt[n], tat[n];
    int completed[n];
    int total_wt = 0, total_tat = 0;

    // Input burst times
    for (int i = 0; i < n; i++) {
        pid[i] = i + 1;
        printf("Enter burst time for P%d: ", pid[i]);
        scanf("%d", &bt[i]);
        completed[i] = 0;
    }

    int t = 0;   // current time
    int done = 0;

    while (done < n) {
        int idx = -1;
        int min_bt = 99999;

        // Pick the process with the smallest burst time (among not completed)
        for (int i = 0; i < n; i++) {
            if (!completed[i] && bt[i] < min_bt) {
                min_bt = bt[i];
                idx = i;
            }
        }

        // Execute the selected process
        t += bt[idx];
        wt[idx] = t - bt[idx];        // waiting time
        tat[idx] = wt[idx] + bt[idx]; // turnaround
        completed[idx] = 1;
        done++;
    }

    // Display results
    printf("\nSJF Scheduling (Non-Preemptive)\n");
    printf("---------------------------------------------\n");
    printf("PID\tBurst\tWaiting\tTurnaround\n");
    printf("---------------------------------------------\n");
    for (int i = 0; i < n; i++) {
        printf("P%d\t%d\t%d\t%d\n", pid[i], bt[i], wt[i], tat[i]);
        total_wt += wt[i];
        total_tat += tat[i];
    }
    printf("---------------------------------------------\n");
    printf("Average Waiting Time    = %.2f\n", (float)total_wt / n);
    printf("Average Turnaround Time = %.2f\n", (float)total_tat / n);

    return 0;
}
OUTPUT
Enter number of processes: 4
Enter burst time for P1: 6
Enter burst time for P2: 8
Enter burst time for P3: 7
Enter burst time for P4: 3

SJF Scheduling (Non-Preemptive)
---------------------------------------------
PID     Burst   Waiting Turnaround
---------------------------------------------
P4      3       0       3
P1      6       3       9
P3      7       9       16
P2      8       16      24
---------------------------------------------
Average Waiting Time    = 7.00
Average Turnaround Time = 13.00
